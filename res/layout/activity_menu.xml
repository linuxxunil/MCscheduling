<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:theme="@style/AppTheme"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
     android:background="@drawable/repeat">

    <RelativeLayout
	    android:id="@+id/menubar"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/menubar_color">
	<TextView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textColor="#ffffff"
	    android:textSize="25sp"
	    android:layout_marginLeft="10dp"
	    android:layout_alignParentLeft="true"
	    android:layout_centerVertical="true"
	    android:text="@string/app_name"/>

	</RelativeLayout>
	
	    <TableLayout
	        android:gravity="center"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent">
			
		    <TableRow
		        android:layout_width="fill_parent"
		        android:layout_height="0dp"
		        android:layout_margin="@dimen/activity_vertical_margin"
		        android:layout_weight="1" >
		        
				<ImageButton
				    android:id="@+id/ImageButton_MenuPage_hospitalProfile"
				    android:layout_width="0dp"
				    android:layout_height="wrap_content"
				    android:layout_gravity="center_vertical"
				    android:layout_margin="@dimen/activity_vertical_margin"
				    android:layout_weight="1"
				    android:background="#00000000"
				    android:contentDescription="@string/StringButton"
				    android:scaleType="fitCenter"
				    android:src="@drawable/hospital_profile" />
  	
				<ImageButton
				    android:id="@+id/ImageButton_MenuPage_doctorProfile"
				    android:layout_width="0dp"
				    android:layout_height="wrap_content"
				    android:layout_gravity="center_vertical"
				    android:layout_margin="@dimen/activity_vertical_margin"
				    android:layout_weight="1"
				    android:background="#00000000"
				    android:contentDescription="@string/StringButton"
				    android:scaleType="fitCenter"
				    android:src="@drawable/doctor_profile" />
  	
		    </TableRow>

		    <TableRow
		        android:layout_width="fill_parent"
		        android:layout_height="0dp"
		        android:layout_margin="@dimen/activity_vertical_margin"
		        android:layout_weight="1" >
				
				<ImageButton
				    android:id="@+id/ImageButton_MenuPage_schedule"
				    android:layout_width="0dp"
				    android:layout_height="wrap_content"
				    android:layout_gravity="center_vertical"
				    android:layout_margin="@dimen/activity_vertical_margin"
				    android:layout_weight="1"
				    android:background="#00000000"
				    android:contentDescription="@string/StringButton"
				    android:scaleType="fitCenter"
				    android:src="@drawable/schedule" />
  	
				<ImageButton
				    android:id="@+id/ImageButton_MenuPage_registeredinquiry"
				    android:layout_width="0dp"
				    android:layout_height="wrap_content"
				    android:layout_gravity="center_vertical"
				    android:layout_margin="@dimen/activity_vertical_margin"
				    android:layout_weight="1"
				    android:background="#00000000"
				    android:contentDescription="@string/StringButton"
				    android:scaleType="fitCenter"
				    android:src="@drawable/registeredinquiry" />
  	
		    </TableRow>
    
		   <TableRow
		       android:layout_width="fill_parent"
		       android:layout_height="0dp"
		       android:layout_margin="@dimen/activity_vertical_margin"
		       android:layout_weight="1" >
				
				<ImageButton
				    android:id="@+id/ImageButton_MenuPage_membershipInformation"
				    android:layout_width="0dp"
				    android:layout_height="wrap_content"
				    android:layout_gravity="center_vertical"
				    android:layout_margin="@dimen/activity_vertical_margin"
				    android:layout_weight="1"
				    android:background="#00000000"
				    android:contentDescription="@string/StringButton"
				    android:scaleType="fitCenter"
				    android:src="@drawable/membership_information" />
  	
				<ImageButton
				    android:id="@+id/ImageButton_MenuPage_healthInformation"
				    android:layout_width="0dp"
				    android:layout_height="wrap_content"
				    android:layout_gravity="center_vertical"
				    android:layout_margin="@dimen/activity_vertical_margin"
				    android:layout_weight="1"
				    android:background="#00000000"
				    android:contentDescription="@string/StringButton"
				    android:scaleType="fitCenter"
				    android:src="@drawable/health_information" />
  	
		    </TableRow>
		</TableLayout>
</LinearLayout>