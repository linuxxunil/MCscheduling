<?xml version="1.0" encoding="UTF-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/layout_newDoctorInformation"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
	android:theme="@style/AppTheme"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#2EFEF7"
    android:layout_marginLeft="0dp"
    >
	    <TableLayout
	    	android:layout_gravity="top" 
	    	android:layout_marginTop="0dp"
	    	android:layout_marginLeft="0dp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content">

			<TableRow
				android:gravity="left"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="-5dp"
				android:layout_marginTop="0dp">
			    <ImageView
			        android:layout_width="328dp"
			        android:layout_height="wrap_content"
			        android:layout_marginBottom="0dp"
			        android:layout_marginLeft="0dp"
			        android:layout_marginRight="0dp"
			        android:layout_marginTop="0dp"
			        android:adjustViewBounds="true"
			        android:src="@drawable/image_theme" />
				<ImageButton
			        android:id="@+id/ImageButton_NewDoctorInformationPage_back"
			        android:background="#00000000"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginTop="4dp"
			        android:layout_marginLeft="-80dp"
			        android:layout_weight="1"
			        android:adjustViewBounds="true"
			        android:scaleType="fitCenter"
			        android:contentDescription="@string/StringButton"
			        android:src="@drawable/ic_action_back" />  			        
			</TableRow>	 
				  
			<TableRow
				android:gravity="center"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"			
				android:layout_marginTop="20dp">

			    <TableLayout
			    	android:background="#FFFFFF"
			    	android:layout_gravity="top" 
			    	android:layout_marginTop="0dp"
			    	android:layout_marginLeft="70dp"
			    	android:layout_marginRight="70dp"
				    android:layout_width="100dp"
				    android:layout_height="match_parent"
				    android:paddingLeft="5dp"
				    android:paddingRight="5dp"
				    android:stretchColumns="0,1">
			        
					<TableRow
						android:gravity="center"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="0dp">		
					    <ImageView
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:layout_marginBottom="0dp"
					        android:layout_marginLeft="0dp"
					        android:layout_marginRight="0dp"
					        android:layout_marginTop="0dp"
					        android:adjustViewBounds="true"
					        android:layout_span="2"
					        android:src="@drawable/doctor_photo" />									
					</TableRow>
 					<TableRow
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="0dp">		
					    <Button 
					    	android:id="@+id/button_NewDoctorInformationPage_uploadDoctorPhoto"
					        android:layout_width="20dp"
					        android:layout_height="wrap_content"
					        android:layout_span="1"
					        android:text="選擇檔案" />
					</TableRow>       
			     </TableLayout>
	        
			</TableRow>	 

			<TableRow
				android:gravity="center"
				android:layout_width="wrap_content"	
				android:layout_height="wrap_content"	
							
				android:layout_marginTop="20dp">

			    <TableLayout
			    	android:background="#FFFFFF"
			    	android:layout_gravity="top" 
			    	android:layout_marginLeft="10dp"	
			    	android:layout_marginTop="0dp"
				    android:layout_height="fill_parent"
				    android:shrinkColumns="*"
    				android:stretchColumns="*">
	
 					<TableRow
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="0dp">		
					    <TextView
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:textSize="20sp"
					        android:layout_span="6"
					        android:text="" 
					    />	
					</TableRow>	
							        
 					<TableRow
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="-10dp">		
					    <TextView
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:textSize="20sp"
					        android:layout_span="1"
					        android:text="醫師編號" 
					    />	
					    
					    <TextView
					        android:id="@+id/TextView_NewDoctorInformationPage_doctorNumber"  
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:textSize="20sp"
					        android:layout_span="1"
					        android:text="" 
					    />		
					</TableRow>			
 
 					<TableRow
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="5dp">		
					    <TextView
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:textSize="20sp"
					        android:layout_span="1"
					        android:text="醫院代碼" 
					    />	
					    <TextView
					        android:id="@+id/TextView_NewDoctorInformationPage_hospitalNumber"   
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:textSize="20sp"
					        android:layout_span="1"
					        android:text="0038" 
					    />			    
					</TableRow>		
					
 					<TableRow
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="5dp">		
					    <TextView
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:textSize="20sp"
					        android:layout_span="1"
					        android:text="科別" 
					    />	
						<Spinner
						    android:id="@+id/Spinner_newDoctorInformationPage_medicalDepartment"
						    android:layout_width="190dp"
						    android:layout_height="wrap_content"
						    android:background="@drawable/spinner_style2"/>	
					</TableRow>			

 					<TableRow
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="5dp">		
					    <TextView
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:textSize="20sp"
					        android:layout_span="1"
					        android:text="醫師姓名" 
					    />	
						<EditText  
					    	android:id="@+id/EditText_NewDoctorInformationPage_doctorName"    
					    	android:paddingLeft="10dp"
					    	android:background="@drawable/rounded_edittext"
					   	    android:layout_height="wrap_content"   
					   	    android:singleLine="true"
					   	    android:textSize="20sp"
					   	    android:layout_width="190dp"
					   	    android:hint="請輸入醫師姓名"
					    	android:text=""
						/>  
					</TableRow>		
					
 					<TableRow
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="5dp">		
					    <TextView
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:textSize="20sp"
					        android:layout_span="1"
					        android:text="工作職稱" 
					    />	
						<EditText  
					    	android:id="@+id/EditText_NewDoctorInformationPage_jobTitle"    
					    	android:paddingLeft="10dp"
					    	android:background="@drawable/rounded_edittext"
					   	    android:layout_height="wrap_content"   
					   	    android:singleLine="true"
					   	    android:textSize="20sp"
					   	    android:layout_width="190dp"
					   	    android:hint="請輸入工作職稱"
					    	android:text=""
						/>  
					</TableRow>				
					
 					
 					<TableRow
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="5dp">		
					    <TextView
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:textSize="20sp"
					        android:layout_span="1"
					        android:text="醫師電話" 
					    />	
						<EditText  
					    	android:id="@+id/EditText_NewDoctorInformationPage_doctorPhoneNumber"    
					    	android:paddingLeft="10dp"
					    	android:background="@drawable/rounded_edittext"
					   	    android:layout_height="wrap_content"   
					   	    android:singleLine="true"
					   	    android:textSize="20sp"
					   	    android:layout_width="190dp"
					   	    android:hint="請輸入醫師電話"
					    	android:text=""
						/>  
					</TableRow>		 					
 					
 					<TableRow
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="5dp">		
					    <TextView
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:textSize="20sp"
					        android:layout_span="1"
					        android:text="經歷" 
					    />	
						<EditText  
					    	android:id="@+id/EditText_NewDoctorInformationPage_experience"    
					    	android:paddingLeft="10dp"
					    	android:background="@drawable/rounded_edittext"
					   	    android:layout_height="wrap_content"   
					   	    android:singleLine="true"
					   	    android:textSize="20sp"
					   	    android:layout_width="190dp"
					   	    android:hint="請輸入經歷"
					    	android:text=""
						/>  
					</TableRow>	 

 					<TableRow
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="5dp"
						android:layout_marginBottom="10dp">		
					    <TextView
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:textSize="20sp"
					        android:layout_span="1"
					        android:text="專長" 
					    />	
						<EditText  
					    	android:id="@+id/EditText_NewDoctorInformationPage_skill"    
					    	android:paddingLeft="10dp"
					    	android:background="@drawable/rounded_edittext"
					   	    android:layout_height="wrap_content"   
					   	    android:singleLine="true"
					   	    android:textSize="20sp"
					   	    android:layout_width="190dp"
					   	    android:hint="請輸入專長"
					    	android:text=""
						/>  
					</TableRow>	 
				</TableLayout>
			</TableRow>	
			
			<TableRow
				android:layout_marginTop="10dp">	     

			    <LinearLayout
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:gravity="center_horizontal" >
 						<Button 
				         	android:id="@+id/button_NewDoctorInformationPage_new"
				         	android:layout_width="wrap_content"
		            		android:layout_height="wrap_content"
		            		android:text="新增" /> 
	    				<Button 
				         	android:id="@+id/button_NewDoctorInformationPage_clearAll"
				         	android:layout_width="wrap_content"
		            		android:layout_height="wrap_content"
		            		android:text="清空" />   
	      
			    </LinearLayout>
           	</TableRow>	
		      						
        </TableLayout>
</ScrollView>