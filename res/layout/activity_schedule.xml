<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#FFFFFF">
	    <TableLayout
	    	android:layout_gravity="top" 
	    	android:layout_marginTop="0dp"
	    	android:layout_marginLeft="0dp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content">

			<TableRow
				android:gravity="left"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="-5dp"
				android:layout_marginTop="0dp">
			    <ImageView
			        android:layout_width="328dp"
			        android:layout_height="wrap_content"
			        android:layout_marginBottom="0dp"
			        android:layout_marginLeft="0dp"
			        android:layout_marginRight="0dp"
			        android:layout_marginTop="0dp"
			        android:adjustViewBounds="true"
			        android:src="@drawable/image_theme" />
				<ImageButton
			        android:id="@+id/ImageButton_SchedulePage_back"
			        android:background="#00000000"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginTop="4dp"
			        android:layout_marginLeft="-80dp"
			        android:layout_weight="1"
			        android:adjustViewBounds="true"
			        android:scaleType="fitCenter"
			        android:contentDescription="@string/StringButton"
			        android:src="@drawable/ic_action_back" />  			        
			</TableRow>	 
		</TableLayout>	  
	
	    <LinearLayout
	        android:layout_marginTop="30dp"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_horizontal" >	
	        <Spinner
	            android:layout_marginLeft="10dp"
	            android:id="@+id/Spinner_SchedulePage_medicalDepartment"
	            android:layout_width="80dp"
	            android:layout_height="wrap_content"
	            android:background="@drawable/spinner_style2_half" />			            

			<Spinner
			    android:layout_marginLeft="10dp"
			    android:id="@+id/Spinner_SchedulePage_doctorName"
			    android:layout_width="80dp"
			    android:layout_height="wrap_content"
			    android:background="@drawable/spinner_style2_half"/>			            
   
			<Spinner
			    android:layout_marginLeft="10dp"
			    android:id="@+id/Spinner_SchedulePage_week"
			    android:layout_width="80dp"
			    android:layout_height="wrap_content"
			    android:background="@drawable/spinner_style2_half"/>			            
		</LinearLayout>	    
		
	    <LinearLayout
	        android:layout_marginTop="20dp"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content">	
	        <TextView		
	            android:layout_marginLeft="110dp"		    	
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="20sp"
		        android:text="早"/>	
	        <TextView		
	            android:layout_marginLeft="60dp"		    	
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="20sp"
		        android:text="中"/>	
	        <TextView		
	            android:layout_marginLeft="60dp"		    	
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="20sp"
		        android:text="晚"/>	
	    </LinearLayout>		
		<ListView
		  android:id="@+id/ListView_SchedulePage_doctor"
		  android:layout_height="wrap_content"
		  android:layout_width="match_parent">
		</ListView>

</LinearLayout>