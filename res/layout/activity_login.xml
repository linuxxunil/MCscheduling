<?xml version="1.0" encoding="UTF-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/layout_login"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
	android:theme="@style/AppTheme"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#2EFEF7"
    android:layout_marginLeft="0dp"
    >
	<LinearLayout 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:layout_marginTop="0dp"
	    android:layout_marginLeft="0dp"
	    >
	    <TableLayout
	    	android:layout_gravity="top" 
	    	android:layout_marginTop="0dp"
	    	android:layout_marginLeft="0dp"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content">

			<TableRow
				android:gravity="left"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="-5dp"
				android:layout_marginTop="0dp">
			    <ImageView
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginBottom="0dp"
			        android:layout_marginLeft="0dp"
			        android:layout_marginRight="0dp"
			        android:layout_marginTop="0dp"
			        android:adjustViewBounds="true"
			        android:src="@drawable/image_theme" />
				<ImageButton
			        android:id="@+id/ImageButton_LoginPage_back"
			        android:background="#00000000"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginTop="4dp"
			        android:layout_marginLeft="-80dp"
			        android:layout_weight="1"
			        android:adjustViewBounds="true"
			        android:scaleType="fitCenter"
			        android:contentDescription="@string/StringButton"
			        android:src="@drawable/ic_action_back" />  			        
			</TableRow>	 
				  
			<TableRow
				android:gravity="center"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"			
				android:layout_marginTop="20dp"
				 >

			    <TableLayout
			    	android:background="#2EFEF7"
			    	android:layout_gravity="top" 
			    	android:layout_marginTop="0dp"
			    	android:layout_marginLeft="25dp"
			    	android:layout_marginRight="25dp"
				    android:layout_width="match_parent"
				    android:layout_height="match_parent"
				    android:paddingLeft="20dp"
				    android:paddingRight="20dp"
				    android:stretchColumns="0,1,2">
			        
								        
					<TableRow
						android:layout_marginTop="10dp">
					    <TextView
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:textSize="20sp"
					        android:text="使用者帳號" 
					    />	
					</TableRow>
					<TableRow
						android:layout_marginTop="10dp">
						<EditText  
					    	android:id="@+id/userAccount"    
					    	android:background="@drawable/rounded_edittext"
					   	    android:layout_height="wrap_content"   
					   	    android:singleLine="true"
					   	    android:textSize="20sp"
					   	    android:paddingLeft="10dp"
					   	    android:hint="請輸入您的WebStorage ID"
					    	android:text=""
						/>  
					</TableRow>
					
					
					<TableRow
						android:layout_marginTop="10dp">
					    <TextView
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:textSize="20sp"
					        android:text="使用者密碼" 
					    />	
					</TableRow>
					<TableRow
						android:layout_marginTop="10dp">
						<EditText  
					    	android:id="@+id/password"    
					    	android:background="@drawable/rounded_edittext"
					   	    android:layout_height="wrap_content"   
					   	    android:singleLine="true"
					   	    android:textSize="20sp"
					   	    android:paddingLeft="10dp"
					   	    android:hint="請輸入您的密碼"
					    	android:text=""
						/>  
					</TableRow>					
        
			     </TableLayout>
	        
			</TableRow>	 

				<ImageButton
			        android:id="@+id/ImageButton_LoginPage_login"
			        android:background="#00000000"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginBottom="0dp"
			        android:layout_marginLeft="2dp"
			        android:layout_marginRight="5dp"
			        android:layout_marginTop="20dp"
			        android:layout_weight="1"
			        android:adjustViewBounds="true"
			        android:scaleType="fitCenter"
			        android:contentDescription="@string/StringButton"
			        android:src="@drawable/image_login" />    												

				
        </TableLayout>
	</LinearLayout>
</ScrollView>