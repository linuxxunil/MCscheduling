<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/layout_editDoctorInformation"
	android:theme="@style/AppTheme"
	android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/repeat">
	
    <RelativeLayout
	    android:id="@+id/menubar"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginBottom="10dp"
	    android:background="@drawable/menubar_color">
	<TextView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textColor="#ffffff"
	    android:textSize="25sp"
	    android:layout_marginLeft="10dp"
	    android:layout_alignParentLeft="true"
	    android:layout_centerVertical="true"
	    android:text="@string/app_name"/>
	
	</RelativeLayout>
	
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
	
	<TableLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="10dp"
	        android:gravity="center">
		   	<ImageView
				 android:layout_width="wrap_content"
				 android:layout_height="wrap_content"
				 android:src="@drawable/doctor_photo" />		      
			
 			
 			<TableRow
 			    android:layout_width="wrap_content"
 			    android:layout_height="wrap_content"
 			    android:gravity="center" >
	
				<Button 
					android:id="@+id/button_EditDoctorInformationPage_uploadDoctorPhoto"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
				    android:background="@drawable/button_bk"
           			android:textColor="#FFFFFF"
            		android:textSize="20sp"
					android:text="選擇檔案" />
			</TableRow>       
	        
			<TableRow
			    android:gravity="center"
				android:layout_marginBottom="10dp"
				android:layout_width="wrap_content"	
				android:layout_height="wrap_content">
	
			 <TextView
				 android:layout_width="wrap_content"
				 android:layout_height="wrap_content"
				 android:textSize="20sp"
				 android:text="醫師編號" />	
			
			<TextView
				android:id="@+id/TextView_EditDoctorInformationPage_doctorNumber"  
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="20sp"
				 android:text="" />		
			</TableRow>				
 			<TableRow
				android:gravity="center"
				android:layout_marginBottom="10dp"
				android:layout_width="wrap_content"	
				android:layout_height="wrap_content">
				
			<TextView
				android:layout_width="50dp"
				android:layout_height="wrap_content"
				android:textSize="20sp"
				android:text="醫院代碼" />	
			<TextView
				android:id="@+id/TextView_EditDoctorInformationPage_hospitalNumber"   
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="20sp"
				android:text="0038" />			    
			</TableRow>		
			
		<TableRow
				android:gravity="center"
				android:layout_marginBottom="10dp"
				android:layout_width="wrap_content"	
				android:layout_height="wrap_content">
			
		 <TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="20sp"
				android:text="科別" />	
		<Spinner
				android:id="@+id/Spinner_EditDoctorInformationPage_medicalDepartment"
				android:layout_width="65dp"
				android:layout_height="wrap_content"
				android:background="@drawable/spinner_style2"/>	
		</TableRow>			

		<TableRow
				android:gravity="center"
				android:layout_marginBottom="10dp"
				android:layout_width="wrap_content"	
				android:layout_height="wrap_content">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="20sp"
				android:text="醫師姓名" />	
			<EditText  
				android:id="@+id/EditText_EditDoctorInformationPage_doctorName"    
				android:background="@drawable/rounded_edittext"
				android:layout_height="wrap_content"   
				android:singleLine="true"
				android:textSize="20sp"
				android:paddingLeft="10dp"
				android:layout_width="wrap_content"
				android:hint="請輸入醫師姓名"
				android:text=""/>  
		</TableRow>		
					
		<TableRow
				android:gravity="center"
				android:layout_marginBottom="10dp"
				android:layout_width="wrap_content"	
				android:layout_height="wrap_content">		
			 <TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="20sp"
				android:text="工作職稱" />	
			<EditText  
				android:id="@+id/EditText_EditDoctorInformationPage_jobTitle"    
				android:background="@drawable/rounded_edittext"
				android:layout_height="wrap_content"   
				android:singleLine="true"
				android:textSize="20sp"
				android:paddingLeft="10dp"
				android:layout_width="wrap_content"
				android:hint="請輸入工作職稱"
				android:text=""/>  
		</TableRow>				
					
		<TableRow
				android:gravity="center"
				android:layout_marginBottom="10dp"
				android:layout_width="wrap_content"	
				android:layout_height="wrap_content">	
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="20sp"
				android:text="醫師電話" />	
			<EditText  
				android:id="@+id/EditText_EditDoctorInformationPage_doctorPhoneNumber"    
				android:paddingLeft="10dp"
				android:background="@drawable/rounded_edittext"
				android:layout_height="wrap_content"   
				android:singleLine="true"
				android:textSize="20sp"
				android:layout_width="190dp"
				android:hint="請輸入醫師電話"
				android:text=""/>  
		</TableRow>		 					
 					
		<TableRow
				android:gravity="center"
				android:layout_marginBottom="10dp"
				android:layout_width="wrap_content"	
				android:layout_height="wrap_content">	
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="20sp"
				android:text="經歷" />	
			<EditText  
				android:id="@+id/EditText_EditDoctorInformationPage_experience"    
				android:paddingLeft="10dp"
				android:background="@drawable/rounded_edittext"
				android:layout_height="wrap_content"   
				android:singleLine="true"
				android:textSize="20sp"
				android:layout_width="190dp"
				android:hint="請輸入經歷"
				android:text=""/>  
			</TableRow>	 
		
		<TableRow
				android:gravity="center"
				android:layout_marginBottom="10dp"
				android:layout_width="wrap_content"	
				android:layout_height="wrap_content">	
 						
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="20sp"
				android:text="專長" />	
			<EditText  
				android:id="@+id/EditText_EditDoctorInformationPage_skill"    
				android:paddingLeft="10dp"
				android:background="@drawable/rounded_edittext"
				android:layout_height="wrap_content"   
				android:singleLine="true"
				android:textSize="20sp"
				android:layout_width="wrap_content"
				android:hint="請輸入專長"
				android:text=""/>  
			</TableRow>	 
			
		<TableRow
				android:gravity="center"
				android:layout_width="wrap_content"	
				android:layout_height="wrap_content">		
 			<Button 
				android:id="@+id/button_EditDoctorInformationPage_revise"
				android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
				android:background="@drawable/button_bk"
           		android:textColor="#FFFFFF"
            	android:textSize="20sp"
		        android:text="修改" /> 
           	</TableRow>		      						
        </TableLayout>
        </ScrollView>
</LinearLayout>