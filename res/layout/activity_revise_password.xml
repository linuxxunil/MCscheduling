<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/layout_revise_password"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
	android:theme="@style/AppTheme"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/repeat">
    
    <RelativeLayout
	    android:id="@+id/menubar"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/menubar_color">
	<TextView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textColor="#ffffff"
	    android:textSize="25sp"
	    android:layout_marginLeft="10dp"
	    android:layout_alignParentLeft="true"
	    android:layout_centerVertical="true"
	    android:text="@string/app_name"/>
	
	</RelativeLayout>

	    <TableLayout
	    	android:layout_gravity="top" 
	    	android:layout_marginTop="0dp"
	    	android:stretchColumns="*"
	        android:layout_width="wrap_content"  
	        android:layout_height="wrap_content">

				  
			<TableRow
				android:gravity="center"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="20dp"
				 >

			    <TableLayout
			    	android:layout_gravity="top" 
			    	android:layout_marginTop="0dp"
			    	android:layout_marginLeft="15dp"
			    	android:layout_marginRight="15dp"
				    android:layout_width="fill_parent"
				    android:layout_height="match_parent"
				    android:paddingLeft="20dp"
				    android:paddingRight="20dp"
				    android:stretchColumns="*">
					<TableRow
						android:layout_marginTop="0dp">
					    <TextView	
					    	android:layout_gravity="left" 				    	
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:layout_span="3"
					        android:textSize="15sp"
					        android:text="變更密碼" 
					    />	
					</TableRow>	 
					<TableRow
						android:layout_marginTop="0dp">
					    <TextView	
					    	android:layout_gravity="left" 				    	
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:layout_span="3"
					        android:textSize="15sp"
					        android:text="使用下面的表格來更改密碼" 
					    />	
					</TableRow>	 	
					<TableRow
						android:layout_marginTop="0dp">
					    <TextView	
					    	android:layout_gravity="left" 				    	
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:layout_span="3"
					        android:textSize="15sp"
					        android:text="新密碼的長度必須至少6個字元" 
					    />	
					</TableRow>	        
					<TableRow
						android:layout_marginTop="20dp">	
					</TableRow>
					
					<TableRow
						android:layout_marginTop="10dp">
					    <TextView
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:layout_span="3"
					        android:textSize="20sp"
					        android:text="請輸入舊密碼" 
					    />	
					</TableRow>
					<TableRow
						android:layout_marginTop="10dp">
						<EditText  
					    	android:id="@+id/oldPassword"    
					    	android:background="@drawable/rounded_edittext"
					   	    android:layout_height="wrap_content"   
					   	    android:singleLine="true"
					   	    android:layout_span="3"
					   	    android:textSize="20sp"
					   	    android:paddingLeft="10dp"
					   	    android:inputType="textPassword" 
					    	android:text=""
						/>  
					</TableRow>					
					
					
					<TableRow
						android:layout_marginTop="10dp">
					    <TextView
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:layout_span="3"
					        android:textSize="20sp"
					        android:text="請輸入新密碼" 
					    />	
					</TableRow>
					<TableRow
						android:layout_marginTop="10dp">
						<EditText  
					    	android:id="@+id/newPassword"    
					    	android:background="@drawable/rounded_edittext"
					   	    android:layout_height="wrap_content"   
					   	    android:singleLine="true"
					   	    android:layout_span="3"
					   	    android:textSize="20sp"
					   	    android:paddingLeft="10dp"
					   	    android:inputType="textPassword" 
					    	android:text=""
						/>  
					</TableRow>							
					
					
					<TableRow
						android:layout_marginTop="10dp">
					    <TextView
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:layout_span="3"
					        android:textSize="20sp"
					        android:text="新密碼確認" 
					    />	
					</TableRow>
					<TableRow
						android:layout_marginTop="10dp"
						android:layout_marginBottom="10dp">
						<EditText  
					    	android:id="@+id/newPasswordConfirm"    
					    	android:background="@drawable/rounded_edittext"
					   	    android:layout_height="wrap_content"   
					   	    android:singleLine="true"
					   	    android:layout_span="3"
					   	    android:textSize="20sp"
					   	    android:paddingLeft="10dp"
					   	    android:inputType="textPassword" 
					    	android:text=""
						/>  
					</TableRow>		
										
					<TableRow
						android:gravity="center"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="10dp">
						<Button
						    android:id="@+id/button_RevisePasswordPage_newPasswordConfirm"    
						    android:layout_height="wrap_content"
						    android:layout_width="wrap_content"
						    android:background="@drawable/button_bk"
            				android:textColor="#FFFFFF"
            				android:textSize="20sp"
						    android:text="@string/StringRevise"/>	
					</TableRow>	 					
					
					
						        
			     </TableLayout>
	        
			</TableRow>	 
        </TableLayout>

</LinearLayout>